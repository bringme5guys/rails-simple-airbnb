<!-- app/views/flats/new.html.erb -->
<div class="container">
  <h1 class="text-center my-4">Add a new Flat</h1>
  <%= form_with model: @flat, local: true, class: 'needs-validation' do |form| %>
    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :address, class: 'form-label' %>
      <%= form.text_field :address, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :number_of_guests, class: 'form-label' %>
      <%= form.number_field :number_of_guests, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :price_per_night, class: 'form-label' %>
      <%= form.number_field :price_per_night, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :picture_url, class: 'form-label' %>
      <%= form.text_field :picture_url, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.submit 'Create Flat', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', flats_path, class: 'btn btn-secondary ml-2' %>
    </div>
  <% end %>
</div>
