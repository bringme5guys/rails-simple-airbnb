<!-- app/views/flats/show.html.erb -->
<div class="container mt-4">
  <div class="card">
    <img src="<%= @flat.picture_url %>" class="card-img-top" alt="Flat image">
    <div class="card-body">
      <h2 class="card-title"><%= @flat.name %></h2>
      <p class="card-text"><%= @flat.address %></p>
      <p class="card-text"><%= @flat.description %></p>
      <p><strong>Number of guests:</strong> <%= @flat.number_of_guests %></p>
      <p><strong>Price per night:</strong> <%= @flat.price_per_night %>â‚¬</p>
      <div class="d-flex justify-content-between">
        <%= link_to 'Back to Flats', flats_path, class: 'btn btn-secondary' %>
        <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-secondary' %>
        <%= form_with url: flat_path(@flat), method: :delete, local: true do %>
          <%= submit_tag 'Delete', class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
