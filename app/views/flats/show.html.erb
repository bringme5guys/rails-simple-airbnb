<!-- app/views/flats/show.html.erb -->
<div class="container">
  <h1><%= @flat.name %></h1>
  <% if @flat.picture_url.present? %>
    <%= image_tag @flat.picture_url, class: 'img-fluid' %>
  <% end %>
  <p><%= @flat.address %></p>
  <p><%= @flat.description %></p>
  <p><strong>Number of guests:</strong> <%= @flat.number_of_guests %></p>
  <p><strong>Price per night:</strong> <%= @flat.price_per_night %>â‚¬</p>
  <div class="d-flex justify-content-between">
    <%= link_to 'Back to Flats', flats_path, class: 'btn btn-secondary' %>
    <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-secondary' %>
    <%= link_to 'Delete', @flat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>
</div>
